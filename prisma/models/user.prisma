// User Model (Employees)
model User {
  id            String    @id @default(uuid())
  name          String
  password      String
  email         String?   @unique
  rfidTag       String?   @unique
  role          Role      @default(WORKER) // Possible Roles: WORKER or ADMIN
  emailVerified DateTime?
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  image         String?
  accounts      Account[]
  sessions      Session[]
  cleanups      Cleanup[]
}
