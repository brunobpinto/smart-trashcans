// Trashcan Model (Physical Trashcans)
model Trashcan {
  id          String   @id @default(uuid())
  name        String
  description String? // Observations regarding the trashcan
  location    String? // Location of the trashcan in PUC-RIO      ex: Pr√©dio Leme, Anfiteatro ...
  latitude    Float?
  longitude   Float?
  height      Int      @default(100) // In centimeters
  binType     BinType  @default(COMMON)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  statuses Status[]
  cleanups Cleanup[]
}
